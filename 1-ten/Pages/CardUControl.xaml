<UserControl x:Class="_1_ten.Pages.CardUControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_1_ten.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Height="260" Width="160" Background="White" BorderThickness="2" BorderBrush="#FF948787"></Border>
        <TextBlock x:Name="Rank1Tbx" FontSize="40" FontFamily="Sitka Heading" Margin="3"></TextBlock>
        <TextBlock x:Name="Rank2Tbx" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="40" Margin="3" FontFamily="Sitka Heading"></TextBlock>
        <TextBlock x:Name="SymbolTbx" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="56" FontFamily="Sitka Heading"></TextBlock>
        <Rectangle x:Name="ClosedCardRect" Visibility="Collapsed">
            <Rectangle.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FFD8D1B8"/>
                    <GradientStop Color="#FFBD8C8C" Offset="1"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
